<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

  <services>

    <service id="pumukitvideoeditor.annotationsapilistener" class="Pumukit\SoftVideoEditorBundle\Services\AnnotationsListenerService">
      <argument type="service" id="doctrine_mongodb.odm.document_manager"/>
      <tag name="kernel.event_listener" event="annotations.update" method="onAnnotationsUpdate" />
    </service>

    <service id="pumukitschema.mmsduration" class="Pumukit\SoftVideoEditorBundle\Services\MultimediaObjectDurationService">
      <argument type="service" id="doctrine_mongodb.odm.document_manager"/>
    </service>
  </services>
</container>
